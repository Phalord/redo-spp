<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.Integer?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.spp.gui.controller.ControllerUploadDocumentation">
    <fx:define>
        <Integer fx:id="BUTTON_SIZE" fx:value="200"/>
        <Integer fx:id="BACK_BUTTON_SIZE" fx:value="100"/>
    </fx:define>
    <center>
        <BorderPane>
            <center>
                <HBox>
                    <VBox alignment="CENTER" spacing="15">
                        <Button id="addTimeTable" text="Añadir Horario" prefWidth="$BUTTON_SIZE" onAction="#addTimeTable"/>
                        <Button id="addPartialReport" text="Añadir Reporte Parcial" prefWidth="$BUTTON_SIZE" onAction="#addPartialReport"/>
                        <Button id="addMonthlyReport" text="Añadir Reporte Mensual" prefWidth="$BUTTON_SIZE" onAction="#addMonthlyReport"/>
                        <Button id="back" text="Atrás" prefWidth="$BACK_BUTTON_SIZE" onAction="#back"/>
                        <padding>
                            <Insets topRightBottomLeft="25"/>
                        </padding>
                    </VBox>
                    <VBox alignment="CENTER" spacing="15">
                        <Button id="addActivitiesPlan" text="Añadir Plan de Actividades" prefWidth="$BUTTON_SIZE" onAction="#addActivitiesPlan"/>
                        <Button id="addSelfAppraisal" text="Añadir Autoevaluación" prefWidth="$BUTTON_SIZE" onAction="#addSelfAppraisal"/>
                        <Button id="addPersonalLog" text="Añadir Bitácora PSP" prefWidth="$BUTTON_SIZE" onAction="#addPersonalLog"/>
                        <Button id="addActivity" text="Añadir Actividad" prefWidth="$BUTTON_SIZE" onAction="#addActivity"/>
                        <padding>
                            <Insets topRightBottomLeft="25"/>
                        </padding>
                    </VBox>
                </HBox>
            </center>
            <padding>
                <Insets topRightBottomLeft="50" />
            </padding>
            <left>
                <Region BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Region BorderPane.alignment="CENTER" />
            </right>
            <top>
                <Label text="Subir Documentación" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </top>
        </BorderPane>
    </center>
    <left>
        <Region BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Region BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <Region BorderPane.alignment="CENTER" />
    </bottom>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Usuario">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Mi información" />
                        <MenuItem mnemonicParsing="false" text="Mensajería" />
                        <MenuItem mnemonicParsing="false" text="Cerrar Sesión" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>