<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.Integer?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.spp.gui.controller.ControllerProjectSection">
   <fx:define>
      <Integer fx:id="BUTTON_SIZE" fx:value="200"/>
      <Integer fx:id="BACK_BUTTON_SIZE" fx:value="100"/>
   </fx:define>
   <center>
      <BorderPane fx:id="borderPane">
         <center>
            <VBox alignment="CENTER" spacing="15">
               <Button id="myProject" text="Mi Proyecto" prefWidth="$BUTTON_SIZE" onAction="#viewMyProject"/>
               <Button id="requestProject" text="Solicitar Proyecto" prefWidth="$BUTTON_SIZE" onAction="#requestProject"/>
               <Button id="back" text="Atrás" prefWidth="$BACK_BUTTON_SIZE" onAction="#back"/>
               <padding>
                  <Insets topRightBottomLeft="50"/>
               </padding>
            </VBox>
         </center>
         <padding>
            <Insets topRightBottomLeft="50" />
         </padding>
         <left>
            <Region BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Region BorderPane.alignment="CENTER" />
         </right>
         <top>
            <Label text="Sección Proyecto" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
      </BorderPane>
   </center>
   <left>
      <Region BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Region BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <Menu fx:id="topMenu" mnemonicParsing="false">
            <MenuItem mnemonicParsing="false" text="Cerrar Sesión" onAction="#logOut"/>
         </Menu>
      </MenuBar>
   </top>
</BorderPane>
